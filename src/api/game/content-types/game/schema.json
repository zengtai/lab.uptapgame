{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "recommended": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "games"
    },
    "appid": {
      "type": "string",
      "unique": true
    },
    "icon_url": {
      "type": "string"
    },
    "game_url": {
      "type": "string"
    },
    "creation_date": {
      "type": "datetime"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "screenshot": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
